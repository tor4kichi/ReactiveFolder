<UserControl x:Class="ReactiveFolder.Views.SideMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:local="clr-namespace:ReactiveFolder.Views"
             xmlns:vm="clr-namespace:ReactiveFolder.ViewModels"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="60"
             prism:ViewModelLocator.AutoWireViewModel="True"
             >

    <UserControl.Resources>
        <DataTemplate x:Key="MenuContentTemplate">
            <Border Margin="0 8">
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{Binding MenuItemSelectedCommand}"
                        ToolTip="{Binding Title}"
                        >
                    <materialDesign:PackIcon Kind="{Binding Kind, Mode=OneTime}"
                                             Foreground="{StaticResource PrimaryHueDarkForegroundBrush}"
                                             Width="24"
                                             Height="24"
                                             />
                </Button>
            </Border>
        </DataTemplate>

    </UserControl.Resources>

    <Border Background="{StaticResource PrimaryHueMidBrush}" 
          >
        <DockPanel>

            <StackPanel DockPanel.Dock="Top"
                Orientation="Vertical">
                <ItemsControl ItemsSource="{Binding TopMenuItems}"
                              ItemTemplate="{StaticResource MenuContentTemplate}"
                           Margin="0 8"
                          >
                </ItemsControl>
            </StackPanel>

            <StackPanel DockPanel.Dock="Bottom"
                Orientation="Vertical">
                <ItemsControl ItemsSource="{Binding BottomMenuItems}"
                           Margin="0 8"
                              ItemTemplate="{StaticResource MenuContentTemplate}"
                          >
                </ItemsControl>
            </StackPanel>

            <Border />


        </DockPanel>
    </Border>
</UserControl>
